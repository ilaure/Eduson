pipeline {
  agent { dockerfile true }
  stages {
    stage('Initialize'){
            agent { dockerfile true  }
            steps{
                script{
                    def dockerHome = tool 'myDocker'
                    env.PATH = "${dockerHome}/bin:${env.PATH}"
                }
            }
        }
        stage('Build') {
            agent { dockerfile true  }
            steps {
                echo 'Building..'
                sh 'python --version'
            }
        }
  }
}
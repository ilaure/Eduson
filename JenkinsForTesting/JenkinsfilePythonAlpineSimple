pipeline {
  agent any
  stages {
    stage("Build") {
      steps {
        sh """
          docker build -t DockerfilePythonAlpineSimple -f JenkinsForTesting/DockerfilePythonAlpineSimple .
        """
      }
    }
    stage("Run") {
      steps {
        sh """
          docker run --rm DockerfilePythonAlpineSimple
        """
      }
    }
  }
}